{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Scripion",
    "version": "0.0.1"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": true,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.nomadiz.scripion",
      "icon": ["icons/scripion.ico"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "contentProtected": true,
        "fullscreen": false,
        "resizable": true,
        "title": "Scripion made by @nomadiz ❤️",
        "minWidth": 1000,
        "minHeight": 500,
        "maxHeight": 2000,
        "visible": false,
        "hiddenTitle": false,
        "decorations": true,
        "focus": true,
        "transparent": true
      }
    ]
  }
}
